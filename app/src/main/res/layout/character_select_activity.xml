<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <view
            android:id="@+id/connie1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            class="com.crystalgems.gemhunt.view.CharacterProfileView"
            android:layout_margin="10dp"
            />

        <view
            android:id="@+id/connie2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            class="com.crystalgems.gemhunt.view.CharacterProfileView"
            android:layout_toEndOf="@id/connie1"
            android:layout_margin="10dp"
            />

        <view
            android:id="@+id/connie3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            class="com.crystalgems.gemhunt.view.CharacterProfileView"
            android:layout_toEndOf="@id/connie2"
            android:layout_margin="10dp"
            />

        <view
            android:id="@+id/connie4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            class="com.crystalgems.gemhunt.view.CharacterProfileView"
            android:layout_below="@id/connie1"
            android:layout_margin="10dp"
            />

        <view
            android:id="@+id/connie5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            class="com.crystalgems.gemhunt.view.CharacterProfileView"
            android:layout_below="@id/connie4"
            android:layout_margin="10dp"
            />

    </RelativeLayout>

</ScrollView>